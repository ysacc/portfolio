---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}
const PROJECTS = [
{
    title: "Web Chambita",
    description:
      "Projecto desarrollado para una empresa externa como Front End. Creado  con Next.js, React,HTML ,CSS y StyledComponent.",
    link: "https://chambita.vercel.app/",
    image: "/projects/chambita.jpg",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Sistema Silbia UTP",
    description:
      "Projecto desarrollado para la UTP como Front End. Creado con Next.js, React,DS , Azure ,Sonar,AWS  y Docker.",
    link: "https://silbia2-dev.utpxpedition.com/",
    image: "/projects/Silvia.jpg",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "ERP Supermercados Peruanos",
    description:
      "Projecto desarrollado para el grupo Intercorp como FullStack. Creado con  React,NodeJs,MySql y GCP .",
    image: "/projects/ERP1.jpg",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Agendamiento SANNA",
    description:
      "Maquetado para Clinicas SANNA como Front End. Creado desde cero con Next.js, React y StyledComponent.",
    link: "https://web-sanna.vercel.app/",
    image: "/projects/sanna.jpg",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Rick and Morty",
    description:
      "Creacion de una wiki de una de mis series favoritas Rick and Morty, incluye filtros  por nombre o estado de los personajes.Creado desde cero con  React,Redux , Express,Node,PostgreSQL y CSS.",
    link: "https://rick-and-morty-iota-cyan.vercel.app/",
    github: "https://github.com/ysacc/rick-and-morty",
    image: "/projects/rickandmorty.jpg",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "RedFlix",
    description:
      "Una copia de una conocida plataforma de stream .Creado desde cero con  React , HTML y CSS.",
    link: "https://redflix-two.vercel.app/",
    github: "https://github.com/ysacc/RedFlix",
    image: "/projects/RedFlix.jpg",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Web-Model",
    description:
      "Una pagina web creada para practicar conocimientos.Creado desde cero con  React , HTML y CSS.",
    link: "https://web-model.vercel.app/",
    github: "https://github.com/ysacc/WebModel",
    image: "/projects/WebModel.jpg",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link} target="_blank" rel="noopener noreferrer">
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>