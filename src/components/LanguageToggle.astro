---
const toggleLanguage = () => {
  if (typeof window !== "undefined") {
    const currentLang = localStorage.getItem("lang") || "en"
    const newLang = currentLang === "en" ? "es" : "en"
    localStorage.setItem("lang", newLang)
    location.reload()
  }
}
---

<button
  onclick={toggleLanguage}
  class="ml-4 text-sm font-medium text-gray-700 dark:text-gray-200 border border-gray-300 dark:border-gray-700 rounded-full px-3 py-1 hover:bg-yellow-100 dark:hover:bg-gray-700 transition"
>
  🌐 <span class="ml-1">EN / ES</span>
</button>
